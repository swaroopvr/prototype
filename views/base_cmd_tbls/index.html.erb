<!-- Swaroop ur work on other table's index.html.erb is similar to this , dont make changes to html, just change the name and values corresponding to the other tables-->

<% breadcrumb :root %>
<% content_for(:option_bar) do %>
	<%= render 'shared/option_list' %>
<% end %>
<div class="table-view">
	<table>
		<caption>LIST OF BASE COMMANDS</caption>
		<thead>
			<tr>
				<th>DESCRIPTION </th>
				<th> SUBSYSTEM </th>
				<th class="column-hider"> FORMATION_TYPE </th>    <!--Swaroop column-hider class is for hiding the columns , dont add if not required-->
				<th> CMD_TYPE </th>
				<th class="column-hider"> BASE_CMD_CODE </th>
				<th class="column-hider"> CRITICALITY </th>
				<th class="column-hider"> PULSE_WIDTH </th>
				<th class="column-hider"> MAP_ID </th>
				<th> UI_TYPE </th>
				<th class="column-hider"> PREFERRABLE_DECODER </th>
				<th class="column-hider"> CONFIRMATION_TYPE </th>
				<th> REMARKS </th>
			</tr>
		</thead>
		<tbody>
		<% @base_cmds.each do |f| %>
			<tr data-href="<%= edit_base_cmd_tbl_path(f) %>" data-value="<%=f.CMD_ID%>" class="theShower text-center">
				<td><%= f.DESCRIPTION %></td>
				<td><%= f.SUBSYSTEM %></td>
				<td class="column-hider"><%= f.FORMATION_TYPE %></td>
				<td><%= f.CMD_TYPE %></td>
				<td class="column-hider"><%= f.BASE_CMD_CODE %></td>
				<td class="column-hider"><%= f.CRITICALITY %></td>
				<td class="column-hider"><%= f.PULSE_WIDTH %></td>
				<td class="column-hider"><%= f.MAP_ID %></td>
				<td><%= f.UI_TYPE %></td>
				<td class="column-hider"><%= f.PREFERRABLE_DECODER %></td>
				<td class="column-hider">
					<div>
						<% f.DecoderArray(@confirmer).each do |n| %>
		         			<%= n %> |
		     			<% end %>
	     			</div>
	    		</td>
				<td><%= f.REMARKS %></td>
			</tr>
		<% end %>	
		</tbody>
	</table>
</div>

<div class="lower-options">
	<form action="" class="resizer_form">
		<input id="shrink" type="radio" name="table_resize" checked="checked">
		<label for="shrink">Shrink</label>
		<input id="expand" type="radio" name="table_resize">
		<label for="expand">Expand</label>
	</form>	
	<%= link_to 'Add', new_base_cmd_tbl_path, class: "add-new-table" %>
</div>
