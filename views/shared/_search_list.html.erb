<div class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Tables List <b class="caret"></b></a>
  <ul class="dropdown-menu">
        
    <li><%= link_to "Base Cmd", base_cmd_tbls_path %></li>
    <li><%= link_to "Subsystem", subsystem_tbls_path %></li>
    <li><%= link_to "UI Types", ui_types_tbls_path %></li>
    <li><%= link_to "Confirmer", confirmer_tbls_path %></li>
    <li><%= link_to "Cmd Types", cmd_types_tbls_path %></li>
    <li class="divider"></li>
    <li><%= link_to "Cmd Part Types", cmd_part_types_tbls_path %></li>
    <li><%= link_to "Expressions", expressions_path %></li>
    <li><%= link_to "Bit Sel Info", bit_sel_tbl_infos_path %></li>
    <li><%= link_to "Lkup Info", lkup_tbl_infos_path %></li>

  </ul>
</div>
<div>
	<% if controller_name == 'base_cmd_tbls' && action_name == 'index' %>

      <div class="ForMainSearch">
        <p><strong>Choose Required Fields</strong></p>
        <%= search_form_for @search, url: search_base_cmd_tbls_path, method: :post do |f| %>
          <%= f.condition_fields do |c| %>
            <%= render "condition_fields", f: c %>
          <% end %>
          <p class="add_fields"><%= link_to_add_fields "Add Conditions", f, :condition %></p>
          <%= f.submit "Search", :name => "Base", class: "search_input"%>
        <% end %>
      </div>

      <div><hr size= "20"></div>

      <div id="ForBitSel">
        <p><strong>From Bit-Sel Name</strong></p>
        <%= form_tag base_cmd_tbls_path, :method => 'get' do %>
          <p>
            <%= text_field_tag :BitSelTblName, params[:BitSelTblName], placeholder: "  Bit Sel Name" %>
            <%= submit_tag "Search", :name => "BitSel" %>
          </p>
        <% end %>
      </div>

      <div><hr/></div>

      <div id="ForLkup">
        <p><strong>From Lkup Name</strong></p>
        <%= form_tag base_cmd_tbls_path, :method => 'get' do %>
          <p>
            <%= text_field_tag :LkupTblName, params[:LkupTblName], placeholder: "  Lkup Name" %>
            <%= submit_tag "Search", :name => "Lkup" %>
          </p>
        <% end %>
      </div> 

	<% elsif controller_name == 'subsystem_tbls' && action_name == 'index' %>	

      <!-- vivek this is way you should do to the other search forms -->
      <div class="ForMainSearch">
        <p><strong>Choose Required Fields</strong></p>
        <%= search_form_for @search do |f| %>
          <%= f.condition_fields do |c| %>
            <%= render "condition_fields", f: c %> <!-- _condtion_fields.html.erb partial should be in the their respective view and not in shared or anywhere else -->
          <% end %> 
          <p class="add_fields"><%= link_to_add_fields "Add Conditions", f, :condition %></p>
          <%= f.submit "Search", class: "search_input"%>
        <% end %>
      </div>


    <% elsif controller_name == 'ui_types_tbls' && action_name == 'index' %>

		  <div>
